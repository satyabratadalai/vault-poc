pipeline {
    agent any  // This specifies that the pipeline can run on any available agent

    stages {
        stage('Checkout') {
            steps {
                // This step checks out the source code from a Git repository
               
            }
        }
        stage('Build') {
            steps {
                // This step simply prints a string
                echo 'Hello, this is a simple Jenkins pipeline!'
            }
        }
    }
}
