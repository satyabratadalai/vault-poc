pipeline {
    agent any

    stages {
        stage('Fetch Secret') {
            steps {
                script {
                    // Initialize Vault access
                    def secrets = [
                        [$class: 'VaultSecret', path: 'secret/mulesoft', secretValues: [
                            [$class: 'VaultSecretValue', envVar: 'SECRET_KEY', vaultKey: 'username'],
                            [$class: 'VaultSecretValue', envVar: 'ANOTHER_SECRET', vaultKey: 'password']
                        ]]
                    ]
                    echo "WORKING"
                    // Fetch secrets from Vault
                    withVault([vaultSecrets: secrets, vaultConfigurationId: 'vault-token']) {
                        echo "Secret: ${env.SECRET_KEY}"
                        echo "Another Secret: ${env.ANOTHER_SECRET}"
                    }
                }
            }
        }
    }
}
