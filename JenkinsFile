pipeline {
    agent any

    stages {
        stage('Fetch Secret') {
            steps {
                script {
                    // Initialize Vault access
                    def secrets = [
                        [$class: 'VaultSecret', path: 'secret/mulesoft', secretValues: [
                            [$class: 'VaultSecretValue', envVar: 'name', vaultKey: 'username'],
                            [$class: 'VaultSecretValue', envVar: 'name1', vaultKey: 'password']
                        ]]
                    ]
                    echo "WORKING"
                    // Fetch secrets from Vault
                    withVault([vaultSecrets: secrets, vaultConfigurationId: 'vault-token']) {
                        def secretValue = env.name
                        def anotherSecretValue = env.name1
                        println("Secret: ${secretValue}")
                        println("Another Secret: ${anotherSecretValue}")

                    }
                }
            }
        }
    }
}
