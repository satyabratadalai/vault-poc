pipeline {
    agent any

    stages {
        stage('Fetch Secret') {
            steps {
                script {

                    // Fetch The Env Variables/Input Details
                    echo "Environment Selected : ${MULEENV}"
                    

                    // Initialize Vault access
                    def secrets = [
                        [$class: 'VaultSecret', path: 'secret/mulesoft', secretValues: [
                            [$class: 'VaultSecretValue', envVar: 'name', vaultKey: 'username'],
                            [$class: 'VaultSecretValue', envVar: 'name1', vaultKey: 'password']
                        ]]
                    ]
                    echo "WORKING"
                    // Fetch secrets from Vault
                    withVault([vaultSecrets: secrets, vaultConfigurationId: 'vault-token']) {
                        def secretValue = env.name
                        def anotherSecretValue = env.name1
                        
                        // Print to console (remove this in production)
                        println("Secret: ${secretValue}")
                        println("Another Secret: ${anotherSecretValue}")

                        // Create a new file 'cred.txt' and write the secrets to it
                        // Note: Be cautious with this approach, especially in a shared or production environment
                        writeFile file: 'cred.txt', text: "Username: ${secretValue}\nPassword: ${anotherSecretValue}"
                    }
                }
            }
        }
    }
}
